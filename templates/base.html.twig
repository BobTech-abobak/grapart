<!DOCTYPE html>
<html>
<head>
    <title>{% block title '' %} Grapart.pl</title>

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />

    {{ encore_entry_link_tags('app') }}
</head>
<body>
<div class="container-fluid main-container">
    <div class="row header-row">
        <div class="col text-center">
            <a href="http://www.facebook.com" class="facebook-link">
                <i class="fab fa-facebook-square fa-1x header-icon"></i>
                &nbsp;&nbsp;
                <span class="header-label">Studio Reklamy Grapart</span>
            </a>
        </div>
        <div class="col text-center">
            <span class="mail-link" data-toggle="modal" data-target="#modalMessage" data-whatever="@mdo">
                <i class="fas fa-envelope fa-1x header-icon"></i>
                &nbsp;&nbsp;
                <span class="header-label">reklama@grapart.pl</span>
            </span>
        </div>
        <div class="col text-center">
            <span class="phone-link">
                <i class="fas fa-phone-square fa-1x header-icon"></i>
                &nbsp;&nbsp;
                <span class="header-label">505 034 758</span>
            </span>
        </div>
        <div class="col text-center">
            <div>
                <a href="{{ path('contact') }}">
                    <i class="fas fa-map-marker-alt header-icon"></i>
                    &nbsp;
                    <span class="header-label">ZÄ…b, Szlak Papieski 220</span>
                </a>
            </div>
        </div>
    </div>
    <div class="row banner-row">
        <a href="{{ path('index') }}">
            <div class="col-12">
                <img class="main-banner" src="{{ asset('build/images/main_banner.jpg') }}" />
            </div>
        </a>
    </div>
    <div class="row main-row">
        {% if menu is defined %}
            <div class="col-lg-3">
                {% block menu %}{% endblock %}
            </div>
        {% endif %}
        <div class="{% if menu is defined %}col-lg-9{% else %}offset-lg-2 col-lg-8{% endif %}" id="main-content">

            {% block breadcrumb %}{% endblock %}
            {% block content %}{% endblock %}
        </div>
        <div class="col-1"></div>
    </div>
    <div class="row footer">
        <div class="col-lg-2">
            <a href="{{ path('contact') }}">
                <i class="fas fa-home fa-1x"></i>
                &nbsp;
                Kontakt
            </a>
        </div>
        <div class="col-lg-3 offset-lg-7">
            <span class="author">&copy; Copyright {{ "now"|date("Y") }} by grapart.pl</span>
            &nbsp;|&nbsp;
            <a href="{{ path('sitemap') }}">Mapa Strony</a>
        </div>
    </div>

    <div class="modal fade" id="modalMessage" tabindex="-1" role="dialog" aria-labelledby="modal_message_label" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modal_message_label">New message</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name" class="col-form-label">Recipient:</label>
                            <input type="text" class="form-control" id="recipient-name">
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Message:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Send message</button>
                </div>
            </div>
        </div>
    </div>


</div>
{{ encore_entry_script_tags('app') }}
</body>
</html>
