{% extends "base.html.twig" %}

{% block title %}
    {{ category.label }}
{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('index') }}">Strona główna</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ category.label }}</li>
        </ol>
    </nav>
{% endblock %}

{% block menu_block %}
    <ul class="menu">
        {% for submenu in menu %}
            {% if submenu.children is defined %}
                <li>{{ submenu.label }}</li>
                <li>
                    <ul>
                        {% for item in submenu.children %}
                            <li>
                                <a href="{{ path('category', {'url': item.url}) }}"
                                   {% if item.url == category.url %}class="active"{% endif %}>
                                    {{ item.label|e }}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li>
                    <a href="{{ path('category', {'url': submenu.url}) }}"
                       {% if submenu.url == category.url %}class="active"{% endif %}>
                        {{ submenu.label|e }}
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endblock %}

{% block content %}
    {% block content_offer %}{% endblock %}
    {% if realizations is not empty %}
        <br />
        <hr class="article-separator">
        <h6 class="main-content-label">Przykładowe realizacje</h6>
        <div class="row">
            {% for realization in realizations %}
                <div class="col-6 col-sm-4 col-lg-3">
                    <a href="{{ asset('build/images/'~realization.image) }}" data-toggle="lightbox" data-title="{{ realization.title }}">
                        <img class="img-fluid img-thumbnail" src="{{ asset('build/images/'~realization.image) }}" alt="{{ realization.title }}" />
                    </a>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
