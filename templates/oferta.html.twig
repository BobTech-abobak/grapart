{% extends "base_2columns.html.twig" %}

{% block title %}
    {{ category.name }}
{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('index') }}">Strona główna</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
        </ol>
    </nav>
{% endblock %}

{% block content %}
    {{ static_content | raw }}
    <div class="mt-4">
        <button type="button" class="btn btn-outline-light p-1" data-toggle="modal" data-target="#modalMessage">
            &nbsp;&nbsp;Zapytaj o ofertę
            &nbsp;&nbsp;<i class="fas fa-comments-dollar"></i>&nbsp;&nbsp;
        </button>
    </div>
    {% if realizations is not empty %}
        <br />
        <hr class="article-separator">
        <h6 class="main-content-label">Przykładowe realizacje</h6>
        <div class="realizations{% if realizations|length > 3 %} realizations-more-than-3{% endif %}">
            {% for realization in realizations %}
                <a href="/images/{{ realization.image }}" data-toggle="lightbox" data-title="{{ realization.title }}" data-gallery="galeria-realizacji">
                    <img class="ml-1 mr-1 mb-3 img-fluid img-thumbnail" src="/images/{{ realization.image }}" alt="{{ realization.title }}" />
                </a>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
